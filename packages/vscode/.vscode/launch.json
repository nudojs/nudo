{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/../../"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "build"
    },
    {
      "name": "Attach to LSP Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": ["${workspaceFolder}/../lsp/src/**/*.ts"]
    }
  ],
  "compounds": [
    {
      "name": "Extension + LSP Debug",
      "configurations": ["Launch Extension", "Attach to LSP Server"]
    }
  ]
}
